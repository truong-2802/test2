@model List<test2.Entities.Employee_Tbl>
@{
}
<div class="container">
    <h1>Department_Tbl</h1>
    <a class="text-primary" asp-controller="Employee_Tbl" asp-action="Create" type="button" class="btn btn-success">Create a Employee_Tbl</a>
    <table class="table table-bordered table-striped">
        <thead>
        <th>ID</th>
        <th>Employee_name</th>
        <th>Employee_code</th>
        <th>Department</th>
        <th>Rank</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Employee_name</td>
                    <td>@item.Employee_code</td>
                    <td>@item.Department</td>
                    <td>@item.Rank</td>
                    <td>

                        <a asp-controller="Employee_Tbl" asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-primary">Edit</a>

                        <a onclick="return confirm('Delete employee_Tbl @item.Employee_name')"
                           asp-controller="Employee_Tbl" asp-action="Delete"
                           asp-route-id="@item.Id" type="button" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>
